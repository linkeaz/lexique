{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://linkeaz.net/schema/lexique.schema.json",
  "title": "Lexique Linkeaz FR",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "term", "category", "shortDefinition", "fullDefinition"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "term": {
        "type": "string",
        "minLength": 2,
        "maxLength": 80
      },
      "category": {
        "type": "string",
        "enum": ["cyber", "ai", "infra", "dev"]
      },
      "shortDefinition": {
        "type": "string",
        "minLength": 40,
        "maxLength": 140
      },
      "fullDefinition": {
        "type": "string",
        "minLength": 120,
        "maxLength": 500
      },
      "aliases": {
        "type": "array",
        "maxItems": 8,
        "items": {
          "type": "string",
          "minLength": 2,
          "maxLength": 80
        },
        "uniqueItems": true
      },
      "related": {
        "type": "array",
        "maxItems": 6,
        "items": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "uniqueItems": true
      }
    },
    "additionalProperties": false
  }
}
